<div class="container container-dashboard">
  <div class="d-flex ms-3 mb-5 mt-5 pt-2 box-class justify-content-start">
    <div class="col-3">
      <img class="dashboard-pfp" src="<%= asset_path('dashboardpfp.png') %>" alt="UserPFP">
    </div>
    <div class="col-3 px-2">
      <h1 class="ms-2 mb-2"><%= @user.name %></h1>
      <div class="d-flex links">
        <a class="btn btn-floating" href="#!" role="button"><i class="fab fa-facebook-f"></i></a>
        <a class="btn btn-floating" href="https://www.twitter.com/vincedelicious/" role="button"><i class="fab fa-twitter"></i></a>
        <a class="btn btn-floating" href="#!" role="button"><i class="fab fa-instagram"></i></a>
        <a class="btn btn-floating" href="https://www.linkedin.com/in/vincedelicious/" role="button"><i class="fab fa-linkedin-in"></i></a>
        <a class="btn btn-floating" href="https://discord.gg/JddBW8k5/" role="button"><i class="fab fa-discord"></i></a>
        <a class="btn btn-floating" href="#!" role="button"><i class="fab fa-github"></i></a>
        <a class="btn btn-floating" href="#!" role="button"><i class="fab fa-slack"></i></a>
      </div>
      <div class="achievements mt-2">
        <h2 class="ms-2">Points: <%= @user.points == nil ? "0" : @user.points %> </h2>
      </div>
    </div>
  </div>
  <%# Track Cards %>
  <div class="d-flex mt-5 mb-5 justify-content-between">
    <%# Basics Track %>
    <div class="track-container">
      <div class="track-card">
        <div class="imgBx">
          <img src="<%= asset_path('Tracks/Basic.gif') %>" alt="Basic Banana Juice!" class="gradient-border">
        </div>
        <div class="contentBx">
          <h2>Blockchain Basics</h2>
          <div class="size">
            <p>Get started learning about Web3 & blockchain!</p>
          </div>
          <div class="color">
          </div>
          <a class="popup-button" href="/lessons">Start</a>
        </div>
      </div>
    </div>
    <%# Investor Track %>
    <div class="track-container">
      <div class="track-card">
        <div class="imgBx">
          <img src="<%= asset_path('Tracks/Investor.gif') %>" alt="STONKS!">
        </div>
        <div class="contentBx">
          <h2>Investing</h2>
          <div class="size">
            <p>Learn how to ride the bull 🐂 & avoid rugs 💸</p>
          </div>
          <div class="color">
          </div>
          <a href="/investing">Start</a>
          </div>
        </div>
      </div>
    <%# Dev Track %>
    <div class="track-container">
      <div class="track-card">
        <div class="imgBx">
          <img src="<%= asset_path('Tracks/Developer.gif') %>" alt="The Merge by Azuki">
        </div>
        <div class="contentBx">
          <h2>Developer</h2>
          <div class="size">
            <p>Build dynamic Web3 Projects on the blockchain!</p>
          </div>
          <div class="color">
          </div>
          <a href="/developer">Start</a>
        </div>
      </div>
    </div>
      <%# Track Cards End %>
    </div>
</div>
