<div class="container container-dashboard">
  <div class="d-flex ms-3 mb-5 mt-5 pt-2 justify-content-start">
    <div class="col-3">
      <img class="dashboard-pfp" src="<%= asset_path('dashboardpfp.png') %>" alt="Image">
    </div>
    <div class="col-3">
      <h1 class="ms-2 mb-2"><%= @user.name %></h1>
      <div class="d-flex">
        <i class="fa-brands fa-facebook m-2"></i>
        <i class="fa-brands fa-linkedin-in m-2"></i>
        <i class="fa-brands fa-slack m-2"></i>
        <i class="fa-brands fa-twitter m-2"></i>
        <i class="fa-brands fa-discord m-2"></i>
      </div>
      <div class="achievements mt-2">
        <p class="ms-2">Points Earned: <%= @user.points == nil ? "0" : @user.points %> </p>
        <img class="dashboard-pfp" src="<%= asset_path('achievements.png') %>" alt="Image">
      </div>
    </div>
  </div>

  <%# Track Cards %>
  <div class="d-flex mt-5 mb-5 justify-content-between">
    <%# Basics Track %>
    <div class="track-container">
      <div class="track-card">
        <div class="imgBx">
          <img src="<%= asset_path('Tracks/Basic.gif') %>" alt="Basic Banana Juice!" class="gradient-border">
        </div>
        <div class="contentBx">
          <h2>Blockchain Basics</h2>
          <div class="size">
            <p>Get started learning about Web3 & blockchain!</p>
          </div>
          <div class="color">
          </div>
          <a class="popup-button" href="/lessons">Start</a>
        </div>
      </div>
    </div>
    <%# Dev Track %>
    <div class="track-container">
      <div class="track-card">
        <div class="imgBx">
          <img src="<%= asset_path('Tracks/Developer.gif') %>" alt="The Merge by Azuki">
        </div>
        <div class="contentBx">
          <h2>Developer</h2>
          <div class="size">
            <p>Build dynamic Web3 Projects on the blockchain!</p>
          </div>
          <div class="color">
          </div>
          <a href="/lessons">Start</a>
        </div>
      </div>
    </div>
    <%# Investor Track %>
    <div class="track-container">
      <div class="track-card">
        <div class="imgBx">
          <img src="<%= asset_path('Tracks/Investor.gif') %>" alt="STONKS!">
        </div>
        <div class="contentBx">
          <h2>Investing</h2>
          <div class="size">
            <p>Learn how to ride the bull ğŸ‚ & avoid rugs ğŸ’¸</p>
          </div>
          <div class="color">
          </div>
          <a href="/lessons">Start</a>
        </div>
      </div>
    </div>
  </div>
  <%# Track Cards End %>
</div>
