<div class="container container-dashboard">
  <div class="d-flex ms-3 mb-5 mt-5 pt-2 justify-content-start">
    <div class="col-3">
      <img class="dashboard-pfp" src="<%= asset_path('dashboardpfp.png') %>" alt="Image">
    </div>
    <div class="col-3">
      <h1 class="ms-2 mb-2"><%= @user.name %></h1>
      <div class="d-flex">
        <i class="fa-brands fa-facebook m-2"></i>
        <i class="fa-brands fa-linkedin-in m-2"></i>
        <i class="fa-brands fa-slack m-2"></i>
        <i class="fa-brands fa-twitter m-2"></i>
        <i class="fa-brands fa-discord m-2"></i>
      </div>
      <div class="achievements mt-2">
        <p class="ms-2">Points Earned: <%= @user.points == nil ? "0" : @user.points %> </p>
        <img class="dashboard-pfp" src="<%= asset_path('achievements.png') %>" alt="Image">
      </div>
    </div>
  </div>
  <div class="d-flex mt-5 mb-5 justify-content-between">
    <div class="m-2">
      <a class="card-link-dashboard" href="/lessons">
        <div class="card card-dashboard m-2 col-12">
          <div class="card-header card-header-dashboard align-items-center text-align-center">
            <h2 class="card-title card-title-dashboard">Basic Track</h2>
          </div>
          <div class="card-body card-body-dashboard">
            <p class="card-text">Just getting started</p>
            <img class="dashboard-pfp mt-2" src="<%= asset_path('track1.png') %>" alt="Image">
          </div>
        </div>
      </a>
    </div>
    <div class="m-2">
      <a class="card-link-dashboard" href="#">
        <div class="card card-dashboard m-2 col-12">
          <div class="card-header card-header-dashboard align-items-center text-align-center">
            <h2 class="card-title card-title-dashboard">Builder Track</h2>
          </div>
          <div class="card-body card-body-dashboard">
            <p class="card-text">We Building!</p>
            <img class="dashboard-pfp mt-2" src="<%= asset_path('track1.png') %>" alt="Image">
          </div>
        </div>
      </a></div>
    <div class="m-2">
      <a class="card-link-dashboard" href="#">
        <div class="card card-dashboard m-2 col-12">
          <div class="card-header card-header-dashboard align-items-center text-align-center">
            <h2 class="card-title card-title-dashboard">Investor Track</h2>
          </div>
          <div class="card-body card-body-dashboard">
            <p class="card-text">Who doesn't like money</p>
            <img class="dashboard-pfp mt-2" src="<%= asset_path('track1.png') %>" alt="Image">
          </div>
        </div>
      </a>
    </div>
  </div>
</div>
