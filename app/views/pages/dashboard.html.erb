<div class="container container-dashboard">
  <div class="d-flex ms-3 mb-5 mt-5 pt-2 justify-content-start">
    <div class="col-3">
      <img class="dashboard-pfp" src="<%= asset_path('dashboardpfp.png') %>" alt="Image">
    </div>
    <div class="col-3">
      <h1 class="ms-2 mb-2"><%= @user.name %></h1>
      <div class="d-flex">
        <i class="fa-brands fa-facebook m-2"></i>
        <i class="fa-brands fa-linkedin-in m-2"></i>
        <i class="fa-brands fa-slack m-2"></i>
        <i class="fa-brands fa-twitter m-2"></i>
        <i class="fa-brands fa-discord m-2"></i>
      </div>
      <div class="achievements mt-2">
        <p class="ms-2">Points Earned: <%= @user.points == nil ? "0" : @user.points %> </p>
        <img class="dashboard-pfp" src="<%= asset_path('achievements.png') %>" alt="Image">
      </div>
    </div>
  </div>

  <%# Track Cards %>
  <div class="d-flex mt-5 mb-5 justify-content-between">
    <%# Dev Track
    <div class="m-2">
      <a class="card-link-dashboard" href="#">
        <div class="card card-dashboard m-2 col-12">
          <div class="card-header card-header-dashboard align-items-center text-align-center">
            <h2 class="card-title card-title-dashboard">Developer</h2>
          </div>
          <div class="card-body card-body-dashboard">
            <p class="card-text">Build dynamic Web3 Projects on the Blockchain!</p>
            <img class="dashboard-pfp mt-2" src="<%= asset_path('builder.gif') MISSING CLOSE" alt="Image">
          </div>
        </div>
      </a></div> %>
    <%# Testing Card for Dev %>
    <div class="track-container">
      <div class="track-card">
        <div class="imgBx">
          <img src="<%= asset_path('builder.gif') %>" alt="The Merge by Azuki">
        </div>
        <div class="contentBx">
          <h2>Developer</h2>
          <div class="size">
            <p>Build dynamic Web3 Projects on the blockchain!</p>
          </div>
          <div class="color">
          </div>
          <a href="#">Start</a>
        </div>
      </div>
    </div>
    <%# Basics Track %>
    <div class="m-2 gradient-border">
      <a class="card-link-dashboard" href="/lessons">
        <div class="card card-dashboard m-2 col-12">
          <div class="card-header card-header-dashboard align-items-center text-align-center">
            <h2 class="card-title card-title-dashboard">Blockchain Basics</h2>
          </div>
          <div class="card-body card-body-dashboard">
            <p class="card-text">Get started learning about Web3 & blockchain!</p>
            <img class="dashboard-pfp mt-2" src="<%= asset_path('Banana.gif') %>" alt="Image">
          </div>
        </div>
      </a>
    </div>
    <%# Investor Track %>
    <div class="m-2 gradient-border">
      <a class="card-link-dashboard" href="#">
        <div class="card card-dashboard m-2 col-12">
          <div class="card-header card-header-dashboard align-items-center text-align-center">
            <h2 class="card-title card-title-dashboard">Investing</h2>
          </div>
          <div class="card-body card-body-dashboard">
            <p class="card-text">Learn how to ride the bull üêÇ & avoid rugs üí∏</p>
            <img class="dashboard-pfp mt-2" src="<%= asset_path('stonks.gif') %>" alt="Image">
          </div>
        </div>
      </a>
    </div>
  </div>
  <%# Track Cards End %>
</div>
