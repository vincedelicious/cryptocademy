<div class="container container-index mt-5">
  <div class="banner-index">
    <h1>Tracks</h1>
    <p>Description of what the track will be like</p>
  </div>
  <div class="row ms-5 me-5">
    <% @lessons.each do |lesson| %>
      <a class="card-link-index" href="/lessons/<%= lesson.id %>">
        <div class="card card-index m-2 col-12">
          <img class="lesson-image" src="<%= asset_path('lesson_backgroun.png') %>" alt="Image">
          <div class="card-header card-header-index align-items-center text-align-center">
            <h2 class="card-title card-title-index"><%= lesson.title %></h2>
          </div>
          <div class="card-body card-body-index">
            <p class="card-text"><%= lesson.description %></p>
            <p class="card-text"><small class="text-muted">Points: <%= lesson.points %></small></p>
          </div>
        </div>
      </a>
    <% end %>
  </div>
</div>
